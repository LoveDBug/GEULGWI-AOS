root = true

[*.{kt,kts}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
tab_width = 4
max_line_length = off


ktlint_code_style = android_studio
ktlint_standard_function-type-modifier-spacing = enabled
ktlint_standard_if-else-bracing = enabled
ktlint_standard_no-blank-line-in-list = enabled
ktlint_standard_no-unused-imports = enabled

# 비활성화 규칙
ktlint_standard_import-ordering = disabled
ktlint_standard_max-line-length = disabled
ktlint_standard_no-wildcard-imports = disabled
ktlint_standard_comment-spacing = disabled
ktlint_standard_annotation = disabled
ktlint_standard_trailing-comma-on-declaration-site = disabled
ktlint_standard_trailing-comma-on-call-site = disabled
ktlint_standard_function-expression-body = disabled

# 줄바꿈 설정
ktlint_chain_method_rule_force_multiline_when_chain_operator_count_greater_or_equal_than = 3
ktlint_function_signature_rule_force_multiline_when_parameter_count_greater_or_equal_than = 3

# Compose 관련 설정
ktlint_function_naming_ignore_when_annotated_with = Composable
compose_allowed_state_holder_names = .*ViewModel,.*UiState